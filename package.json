{
  "name": "@melleb/pgtx",
  "version": "0.4.2",
  "description": "Simple node-postgres wrapper that abstracts transactions and savepoints",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MelleB/pgtx.git"
  },
  "homepage": "https://github.com/MelleB/pgtx#readme",
  "bugs": {
    "url": "https://github.com/MelleB/pgtx/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run test:coverage && npm run build",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "keywords": [
    "node-postgres",
    "transaction",
    "savepoint",
    "postgres",
    "pg",
    "nested",
    "rollback"
  ],
  "author": "MelleB",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.14.0",
    "@types/eslint__js": "8.42.3",
    "@types/pg": "8.11.10",
    "@vitest/coverage-v8": "2.1.4",
    "dotenv": "16.4.5",
    "eslint": "9.14.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "tsup": "8.3.5",
    "typescript": "5.6.3",
    "typescript-eslint": "8.12.2",
    "vitest": "2.1.4"
  },
  "peerDependencies": {
    "pg": "8.13.1"
  }
}
